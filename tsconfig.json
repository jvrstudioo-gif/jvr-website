{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // ðŸ‘‡ alias setup
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // ðŸ‘‡ ensure our custom .d.ts files are loaded
    "typeRoots": ["./types", "./node_modules/@types"],

    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"          // ðŸ‘ˆ include custom type declarations
  ],

  "exclude": ["node_modules"]
}
